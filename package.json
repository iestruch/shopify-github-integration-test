{
  "name": "shopify-github-integration",
  "version": "1.0.0",
  "description": "[![Build status](https://github.com/shopify/dawn/actions/workflows/ci.yml/badge.svg?branch=main)](https://github.com/Shopify/dawn/actions/workflows/ci.yml?query=branch%3Amain) [![PRs Welcome](https://img.shields.io/badge/PRs-welcome-brightgreen.svg?color=informational)](/.github/CONTRIBUTING.md)",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all webpack:prod clear:temp",
    "webpack:watch": "NODE_ENV=development webpack --config .config/webpack.config.js --watch",
    "webpack:dev": "NODE_ENV=development webpack --config .config/webpack.config.js",
    "webpack:prod": "NODE_ENV=production webpack --config .config/webpack.config.js",
    "clear:temp": "rimraf .tmp",    
    "prettier:check": "prettier --check --ignore-path='.config/.prettierignore' --config='.config/.prettierrc' --plugin-search-dir=. '**/*.{js,liquid}'",
    "prettier:fix": "prettier --write --ignore-path='.config/.prettierignore' --config='.config/.prettierrc' --plugin-search-dir=. '**/*.{js,liquid}'",
    "stylelint:check": "stylelint '**/*.{css,scss}' --config .config/.stylelintrc.json --ignore-path .config/.stylelintignore",
    "stylelint:fix": "stylelint '**/*.{css,scss}' --fix --config .config/.stylelintrc.json --ignore-path .config/.stylelintignore",
    "lintstaged": "lint-staged --config .config/.lintstagedrc",
    "prepare": "husky install",
    "inspect": "DEBUG=true node-nightly --inspect --debug-brk node_modules/.bin/webpack --env.debug --env.inspect",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iestruch/shopify-github-integration-test.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/iestruch/shopify-github-integration-test/issues"
  },
  "homepage": "https://github.com/iestruch/shopify-github-integration-test#readme",
  "devDependencies": {
    "@shopify/prettier-plugin-liquid": "^1.0.6",
    "autoprefixer": "^10.4.14",
    "copy-webpack-plugin": "^11.0.0",
    "cpx": "^1.5.0",
    "css-loader": "^6.7.3",
    "eslint-plugin-compat": "^4.1.2",
    "glob": "^9.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "mini-css-extract-plugin": "^2.7.3",
    "node-sass": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^7.0.2",
    "postcss-minify": "^1.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.4",
    "rimraf": "^4.4.0",
    "sass-loader": "^13.2.0",
    "stylelint": "^15.3.0",
    "stylelint-config-standard": "^31.0.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "stylelint-prettier": "^3.0.0",
    "webpack": "^5.76.1",
    "webpack-cli": "^5.0.1",
    "webpack-shell-plugin-next": "^2.3.1"
  }
}
